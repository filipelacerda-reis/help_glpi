# =============================
# Ambiente
# =============================
NODE_ENV=development
PORT=8080
FRONTEND_URL=http://localhost:5173

# =============================
# Banco de Dados (preferido em vars separadas)
# =============================
DB_HOST=localhost
DB_PORT=5432
DB_USER=glpi_etus
DB_PASSWORD=change-me
DB_NAME=glpi_etus
DB_SCHEMA=public
# Opcional: pode ser sobrescrito pelo runtime
DATABASE_URL=postgresql://glpi_etus:change-me@localhost:5432/glpi_etus?schema=public

# =============================
# Redis
# =============================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================
# Seguran√ßa / JWT
# =============================
JWT_SECRET=change-me-super-secret
JWT_REFRESH_SECRET=change-me-super-secret-refresh
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
CONFIG_ENCRYPTION_KEY=change-me-32+chars

# =============================
# Upload / limites
# =============================
MAX_FILE_SIZE=5242880
MAX_FILES=10

# =============================
# Logging / Observability
# =============================
LOG_LEVEL=info
OTEL_ENABLED=false
OTEL_SERVICE_NAME=glpi-backend
OTEL_EXPORTER_OTLP_ENDPOINT=

# =============================
# IA
# =============================
OPENAI_API_KEY=
GEMINI_API_KEY=

# =============================
# N8N (opcional)
# =============================
N8N_WEBHOOK_URL=
N8N_INGEST_WEBHOOK=
N8N_QUERY_WEBHOOK=

# =============================
# SAML (Google Workspace)
# =============================
SAML_ENABLED=false
SAML_ENTRY_POINT=
SAML_ISSUER=
SAML_CALLBACK_URL=
SAML_CERT=
SAML_SIGNATURE_ALG=sha256
SAML_NAMEID_FORMAT=urn:oasis:names:tc:SAML:1.1:nameid-format:emailAddress
SAML_ALLOWED_DOMAINS=
SAML_GROUPS_ATTRIBUTE=groups
SAML_ROLE_MAPPING_JSON={}
SAML_DEFAULT_ROLE=REQUESTER
SAML_UPDATE_ROLE_ON_LOGIN=true
SAML_JWT_REDIRECT_URL=
SAML_VALIDATE_IN_RESPONSE_TO=true
SAML_REQUEST_ID_TTL_MS=28800000
SAML_REQUIRE_GROUP=true

# =============================
# Auth0
# =============================
AUTH0_ENABLED=false
AUTH0_DOMAIN=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_CALLBACK_URL=
AUTH0_JWT_REDIRECT_URL=
AUTH0_ALLOWED_DOMAINS=
AUTH0_ROLES_CLAIM=https://glpi.etus.io/roles
AUTH0_ROLE_MAPPING_JSON={}
AUTH0_DEFAULT_ROLE=REQUESTER
AUTH0_UPDATE_ROLE_ON_LOGIN=true
AUTH0_REQUIRE_ROLE=true
